<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.naplo.forex.PozicioNyitasController" spacing="10" alignment="CENTER">
    <ComboBox fx:id="currencyPairComboBox" promptText="Select Currency Pair" />
    <ComboBox fx:id="amountComboBox" promptText="Select Amount" />
    <ComboBox fx:id="directionComboBox" promptText="Select Direction" />
    <Button text="Open Position" onAction="#onHelloButtonClick" />
    <TextArea fx:id="welcomeText" prefHeight="200" prefWidth="300" editable="false" />
</VBox>
