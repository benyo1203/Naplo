<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.naplo.forex.AktualisArakController" spacing="10" alignment="CENTER" prefWidth="400">


    <!-- HBox a két ComboBox és a "-" jel számára -->
    <HBox spacing="5" alignment="CENTER">
        <ComboBox fx:id="firstCurrencyComboBox" promptText="Válassz első devizát" prefWidth="150" />
        <Label text="-" />
        <ComboBox fx:id="secondCurrencyComboBox" promptText="Válassz második devizát" prefWidth="150" />
    </HBox>
    <Label fx:id="welcomeText" text="Aktuális árak megjelenítése itt..." />
    <Button text="Árak megtekintése" onAction="#onHelloButtonClick" />
</VBox>


