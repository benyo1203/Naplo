<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.naplo.forex.PozicioZarasController" spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-font-size: 14;">
    <!-- Pozíció ID bevitel -->
    <TextField fx:id="tradeIdInput" promptText="Add meg a pozíció ID-t" minWidth="300"/>

    <!-- Záró gomb -->
    <Button text="Pozíció Zárása" onAction="#onHelloButtonClick" minWidth="300"/>

    <!-- Üzenet megjelenítés -->
    <TextArea fx:id="welcomeText" promptText="A kimenet itt jelenik meg..." editable="false" minWidth="300" minHeight="150"/>
</VBox>
