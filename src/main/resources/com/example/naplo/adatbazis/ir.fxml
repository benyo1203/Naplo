<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.naplo.adatbazis.IrController" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Név:"/>
    <TextField fx:id="nevTextField" GridPane.columnIndex="1" />

    <Label text="Osztály:" GridPane.rowIndex="1"/>
    <TextField fx:id="osztalyTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Fiu:" GridPane.rowIndex="2"/>
    <TextField fx:id="fiuTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button text="Hozzáadás" onAction="#handleAddRecord" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER"/>

    <!-- Hozzáadott Label, amely a siker üzenetét fogja megjeleníteni -->
    <Label fx:id="successLabel" text="" GridPane.rowIndex="4" GridPane.columnSpan="2" alignment="CENTER"/>
</GridPane>

